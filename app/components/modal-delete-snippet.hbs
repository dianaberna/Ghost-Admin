<header class="modal-header">
    <h1>{{t "snippet.Confirm snippet deletion"}}</h1>
</header>
<a class="close" href="" role="button" title={{t "common.Close"}} {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>

<div class="modal-body">
    <p>
        {{{t "snippet.You're about to delete the \"<strong>{name}</strong>\" snippet. This is permanent, and will delete the snippet for all staff users. It will <strong>not</strong> change any posts where youâ€™ve used this snippet in the past." name=this.snippet.name}}}
    </p>
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>{{t "common.Cancel"}}</span></button>
    <GhTaskButton
        @buttonText={{t "taskButton.Delete snippet"}}
        @successText={{t "taskButton.Deleted"}}
        @task={{this.deleteSnippet}}
        @taskArgs={{this.snippet}}
        @class="gh-btn gh-btn-red gh-btn-icon" />
</div>
