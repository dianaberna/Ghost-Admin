
<header class="modal-header" data-test-modal="delete-user">
    <h1>{{t "Upgrade to enable publishing"}}</h1>
</header>
<button class="close" title="{{t "common.Close"}}" {{on "click" this.closeModal}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></button>

<div class="modal-body">
    <p>
        {{{t "Your current plan allows you to have up to <strong>{limit, plural}</strong>, but you currently have <strong>{total, plural}</strong>" limit=upgradeMessage.limit total=upgradeMessage.total}}}.
    </p>
</div>

<div class="modal-footer">
    <button {{on "click" this.closeModal}} class="gh-btn" data-test-button="cancel-upgrade">
        <span>{{t "common.Cancel"}}</span>
    </button>

    <button {{on "click" (action "upgrade")}} class="gh-btn gh-btn-black" data-test-button="upgrade-plan">
        <span>{{t "common.Upgrade"}}</span>
    </button>
</div>