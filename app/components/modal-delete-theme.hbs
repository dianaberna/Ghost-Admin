<header class="modal-header" data-test-delete-theme-modal>
    <h1>{{t "Are you sure you want to delete this"}}</h1>
</header>
<a class="close" href="" role="button" title={{t "common.Close"}} {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>

<div class="modal-body">
    <p>{{t "You're about to delete \"<strong>{label}</strong>\". This is permanent! We warned you, k?" label=this.theme.label htmlSafe=true}}
        <a href="#" {{action this.download}}>{{t "Maybe download your theme before continuing"}}</a></p>
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn" data-test-cancel-button><span>{{t "common.Cancel"}}</span></button>
    <GhTaskButton @buttonText={{t "taskButton.Delete"}} @successText={{t "taskButton.Deleted"}} @task={{this.deleteTheme}} @class="gh-btn gh-btn-red gh-btn-icon" data-test-delete-button="true" />
</div>
