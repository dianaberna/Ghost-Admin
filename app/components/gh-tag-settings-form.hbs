            <GhFormGroup @class="settings-code" @errors={{this.tag.errors}} @hasValidated={{this.tag.hasValidated}} @property="codeinjectionHead">
                <label for="codeinjection-head" class="gh-tag-setting-codeheader">{{t "tags.Tag header"}} <code class="fw4 ml1">\{{ghost_head}}</code></label>
